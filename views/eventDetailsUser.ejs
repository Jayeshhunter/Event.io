      <br />
      <br />
      <hr style="border-color: white; opacity: 60%; width: 80%" />
      <br />

      <p class="opacity"><%=details%></p>

      <br />
      <p class="text-center text-warning text-uppercase">
        <mark><%=club%></mark>
      </p>
      <br />

      <button class="btn custom-button btn-warning">
        <a style="text-decoration: none;color: white;" href="/eventDetailsUserF/<%=user%>/<%=eventId%>/<%=title%>">Click to confirm your participation</a></button>
